
<ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

  <!-- Sidebar - Brand -->
  <a class="sidebar-brand d-flex align-items-center justify-content-center" href="index.html">
    <div class="sidebar-brand-icon rotate-n-15">
      <i class="fas fa-laugh-wink"></i>
    </div>
    <div class="sidebar-brand-text mx-3">Pfrada</div>
  </a>

  <!-- Divider -->
  <hr class="sidebar-divider my-0">

  <!-- MENU ITEM -->

  {% for module in modules_fuctions.getAllSystemModule() %}
  {% if modules_fuctions.getCountModuleFunctions(module.id) != 0 %}
  <li class="nav-item">
      <a class="nav-link" href="#" data-toggle="collapse" data-target="#{{ module.module_name|replace({' ': ''}) }}" aria-expanded="true" aria-controls="collapsePages">
      <!--i class="fas fa-fw fa-tachometer-alt"></i -->
      <span style="font-weight: bold; ">{{ module.module_name | title }}</span></a>
      <div id="{{ module.module_name|replace({' ': ''}) }}" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
        <div class="bg-white py-2 collapse-inner rounded">
        {% for primeMenu in modules_fuctions.getAllSideMenu(module.id) %}
        {% if is_granted(primeMenu.route) %}
          {% if primeMenu.module_id == module.id %}
              <a class="collapse-item" href="{{ path(primeMenu.route) }}">
              {{ primeMenu.function_name }}</a>
          {% endif %}
        {% endif %}
        {% endfor %}
        </div>
      </div>
  </li>
  <hr class="sidebar-divider">
  {% endif %}
  {% endfor%}
</ul>
