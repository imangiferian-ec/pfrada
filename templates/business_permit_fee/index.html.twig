{% extends 'base.html.twig' %}

{% block body %}
    <h1>Business Permit Fees</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Business Type</th>
                <th>New Applicantion Charge</th>
                <th>Renewal Charge</th>
                <th>Payment Fee for </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% set cnt = 1 %}
        {% for business_permit_fee in business_permit_fees %}
            <tr>
                <td>{{ cnt }}</td>
                <td>{{ business_permit_fee.businessType }}</td>
                <td>{{ business_permit_fee.newApplicantCharge }}</td>
                <td>{{ business_permit_fee.renewalApplicantCharge }}</td>
                <td>{{ business_permit_fee.isForCitizen ? 'Citizen' : 'Corporation' }}</td>
                <td>
                    <a href="{{ path('business_permit_fee_show', {'id': business_permit_fee.id}) }}">show</a>
                    <a href="{{ path('business_permit_fee_edit', {'id': business_permit_fee.id}) }}">edit</a>
                </td>
            </tr>
          {% set cnt = cnt + 1 %}
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('business_permit_fee_new') }}">Create new</a>
{% endblock %}
