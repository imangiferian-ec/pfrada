{{ form_start(form) }}
<hr>
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="form-group">
        {{ form_label(form.purpose) }}
        {{ form_widget(form.purpose, {'attr': {'class': 'form-control'}}) }}
        <div class="form-error">
        {{ form_errors(form.purpose) }}
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="form-group">
        {{ form_label(form.description) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        <div class="form-error">
        {{ form_errors(form.description) }}
        </div>
      </div>
    </div>
  </div>
</div>
<hr>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <button class="float-right btn btn-primary btn-md">{{ button_label|default('Save') }}</button>
    </div>
  </div>
</div>
{{ form_end(form) }}
